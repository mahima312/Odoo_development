<odoo>
    <record id="view_employee_department_shift_tree" model="ir.ui.view">
        <field name="name">employee.department.shift.ksc.tree</field>
        <field name="model">employee.department.shift.ksc</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="shift"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_department_shift_search" model="ir.ui.view">
        <field name="name">employee.department.shift.ksc.search</field>
        <field name="model">employee.department.shift.ksc</field>
        <field name="arch" type="xml">
            <search>
                <field name="shift"/>
            </search>
        </field>
    </record>

    <record id="action_employee_department_shift" model="ir.actions.act_window">
        <field name="name">Employee Department Shift</field>
        <field name="res_model">employee.department.shift.ksc</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_employee_department_shift_tree"/>
        <field name="search_view_id" ref="view_employee_department_shift_search"/>
    </record>

    <menuitem id="employee_department_shift_menu" name="Employee Shifts" action="action_employee_department_shift"/>
</odoo>
